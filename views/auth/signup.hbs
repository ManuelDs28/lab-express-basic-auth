<h1>Sign Up</h1>

<form action="/signup" method="POST">
  <div class="mb-3">
    <label for="username" class="form-label">Username</label>
    <input type="text" class="form-control form-control {{#if errors.username}}is-invalid{{/if}}" id="username"
      placeholder="Username" name="username" value="{{user.username}}">

  </div>
  <div style="color: red;">
    <p> {{errors.username}}</p>
  </div>
  <div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input type="password" class="form-control form-control {{#if errors.password}}is-invalid{{/if}}" id="password"
      placeholder="password" name="password">
  </div>
  <div style="color: red;">
    <p> {{errors.password}}</p>
  </div>
  <button>Submit</button>
</form>